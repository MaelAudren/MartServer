<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app
        PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
        "http://java.sun.com/dtd/web-app_2_3.dtd">
<web-app>
    <display-name>org.occiware.mart</display-name>
    <servlet>
        <servlet-name>MartServer</servlet-name>
        <servlet-class>org.glassfish.jersey.servlet.ServletContainer</servlet-class>
        <init-param>
            <param-name>jersey.config.server.provider.packages</param-name>
            <param-value>org.occiware.mart.server.servlet</param-value>
        </init-param>
        <!-- <load-on-startup>1</load-on-startup> -->
    </servlet>
    <!-- All html files at any path -->
    <!--<servlet-mapping>
        <servlet-name>default</servlet-name>
        <url-pattern>*.html</url-pattern>
    </servlet-mapping>-->
    <!-- Specifically index.html at the root -->
   <!-- <servlet-mapping>
        <servlet-name>default</servlet-name>
        <url-pattern>/index.html</url-pattern>
    </servlet-mapping>-->
    <!--<servlet-mapping>
        <servlet-name>default</servlet-name>
        <url-pattern>/occinterface/index.html</url-pattern>
    </servlet-mapping>-->
    <servlet-mapping>
        <servlet-name>MartServer</servlet-name>
        <url-pattern>/*</url-pattern>
    </servlet-mapping>
</web-app>
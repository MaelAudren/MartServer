            <groupId>org.occiware</groupId>
            <artifactId>org.occiware.clouddesigner.occi.infrastructure.connector.dummy</artifactId>
            <version>0.1.0-SNAPSHOT</version>
            <scope>runtime</scope>
        </dependency>


                <executions>
                    <execution>
                        <id>eclipse-ocl</id>
                        <phase>initialize</phase>
                        <goals>
                            <goal>install-file</goal>
                        </goals>
                        <configuration>
                            <groupId>org.eclipse.ocl</groupId>
                            <artifactId>org.eclipse.ocl.pivot</artifactId>
                            <version>${eclipse.ocl.pivot.version}</version>
                            <packaging>jar</packaging>
                            <file>${basedir}/lib/org.eclipse.ocl.pivot_1.1.1.v20160808-1416.jar</file>
                        </configuration>
                    </execution>
                    <execution>
                        <id>eclipse-ocl-common</id>
                        <phase>initialize</phase>
                        <goals>
                            <goal>install-file</goal>
                        </goals>
                        <configuration>
                            <groupId>org.eclipse.ocl</groupId>
                            <artifactId>org.eclipse.ocl.common</artifactId>
                            <version>${eclipse.ocl.common.version}</version>
                            <packaging>jar</packaging>
                            <file>${basedir}/lib/org.eclipse.ocl.common_1.4.0.v20160521-2033.jar</file>
